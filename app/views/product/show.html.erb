<div class="container mt-5">
  <h1><%= @product.name %></h1>
  <div class="row mt-4">
    <div class="col-md-4">
      <img src="<%= @product.image %>" alt="<%= @product.name %>" class="img-fluid">
    </div>
    <div class="col-md-8">
      <h3>Details</h3>
      <ul class="list-group">
        <li class="list-group-item"><strong>Price:</strong> <%= number_to_currency(@product.price) %>  <%= @product.currency %></li>
        <li class="list-group-item"><strong>Type:</strong> <%= @product.product_type.description %></li>
        <li class="list-group-item"><strong>Brand:</strong> <%= @product.brand.description %></li>
        <li class="list-group-item"><strong>Category:</strong> <%= @product.category.description %></li>
        <li class="list-group-item"><strong>Colors availables:</strong>
          <div style="display: inline-flex; gap: 10px;">
            <% @colors.each do |color| %>
              <div style="width: 30px; height: 30px; border-radius: 50%; background-color: <%= color.hex_value %>; border: 1px solid #ccc;"></div>
            <% end %>
          </div>
        </li>
        <li class="list-group-item"><strong>Description:</strong> <%= @product.description %></li>
        <li class="list-group-item"><%= link_to "Check the website", @product.link, class: "btn btn-primary" %></li>
      </ul>
    </div>
  </div>
</div>
