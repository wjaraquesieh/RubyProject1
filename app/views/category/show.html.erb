<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= @category.description %> makeups</title>
  </head>
  <body>
    <div class="container">
      <h1 class="mt-5">Products for <%= @category.description %> brand</h1>
      <table class="table table-striped table-hover mt-3">
        <thead>
          <tr>
            <th scope="col"></th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% @products.each_with_index do |product, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><img src="<%= product.image %>" alt="<%= product.name %>" class="img-thumbnail" style="width: 100px;"></td>
              <td><%= product.name %></td>
              <td><%= link_to "Details", product_path(product), class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="d-flex align-items-center justify-content-center">
        <%= paginate @products %>
      </div>
    </div>
  </body>
</html>
